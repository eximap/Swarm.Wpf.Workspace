<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Tasks="clr-namespace:Swarm.Wpf.Workspace.Controls.Tasks"
             xmlns:controls="clr-namespace:Swarm.Wpf.Workspace.Controls"
             x:Class="Swarm.Wpf.Workspace.Controls.ServiceDesc" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Resources>
        <JournalEntryListConverter x:Key="JournalEntryListConverter"/>
    </UserControl.Resources>
    <Grid Margin="0,0,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Width="190">
            <StackPanel AllowDrop="True" x:Name="Grid4" Margin="0" Background="#FFF0F0F0"/>
        </ScrollViewer>
        <Tasks:ImageTask x:Name="Preview" HorizontalAlignment="Right" Margin="4,0,0,0" VerticalAlignment="Bottom" Width="400" Height="185"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="195,0,0,200">
            <StackPanel AllowDrop="True" x:Name="Grid2" Margin="0" Background="#FFF0F0F0"/>
        </ScrollViewer>

    </Grid>
</UserControl>
